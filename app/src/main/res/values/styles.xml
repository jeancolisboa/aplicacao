<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="botaoOperador">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">25sp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="ProgressBarCircular" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/white</item>
        <item name="android:progressBackgroundTint">@android:color/transparent</item>
    </style>

    <style name="ProgressBarCirculardois" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/black</item>
        <item name="android:progressBackgroundTint">@android:color/transparent</item>
    </style>

</resources>